version: '3'

services:

  ftpd_<USER>:
    ports:
     - "<HTTPD_PORT>:80"
    image: osct/ftpd 
    volumes:
     - palms_ftpdir_<USER>:/ftp
    networks:
     - palms_network_<USER>
    environment:
     - USERS=<FTP_USER>|<FTP_PASS>
    container_name: palms_ftpd_<USER>

  repast_<USER>:
    depends_on:
     - ftpd_<USER>
    image: osct/repast
    networks:
     - palms_network_<USER>

volumes:
 palms_ftpdir_<USER>:
networks:
 palms_network_<USER>:
